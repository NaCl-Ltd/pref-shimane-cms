<div class="row-fluid">
  <div class="span12">
    <%= form_for(@section, url: main_app.susanoo_admin_section_path(@section), html: {class: "form-horizontal form-inline well"}) do |f| -%>
      <%= render partial: 'form', locals: {f: f} %>

      <div class="control-group">
        <div class="controls">
          <%= submit_tag t("shared.save"), class: "btn btn-primary" %>&nbsp;&nbsp;
          <%= link_to t("shared.back"), main_app.susanoo_admin_sections_path, class: "btn btn-warning" %>
        </div>
      </div>
    <% end -%>
  </div>
</div>
